<span class="menu_title">閲覧</span><br />

<p>
  <b>タイトル:</b>
  <%=h @schedule.title %>
</p>

<p>
  <b>日付:</b>
  <%=h @schedule.schedule_date.strftime("%Y年%m月%d日") unless @schedule.schedule_date.blank? %>
</p>

<p>
  <b>時間:</b>
  <%=h @schedule.start_time.strftime("%H:%M") unless @schedule.start_time.blank? %>〜<%=h @schedule.end_time.strftime("%H:%M") unless @schedule.end_time.blank? %>
</p>

<p>
  <b>周期:</b>
  <%=h @schedule.cycle %>
</p>

<p>
  <b>周期間隔:</b>
  <%=h @schedule.cycle_mode %>
</p>

<p>
  <b>公開設定:</b>
  <%=h @schedule.mode %>
</p>

<p>
  <b>備考:</b>
  <pre><%=h @schedule.note %></pre>
</p>

<%# ページネーション %>
<div class="pagination">

<%= link_to t( 'menu.list' ), { :controller => "schedules", :action => "list", :id => @schedule.id, :date => @now_date } %>
<%= link_to t( 'menu.edit' ), { :controller => "schedules", :action => "edit", :id => @schedule.id, :date => @now_date } %>
<%= link_to t( 'menu.delete' ), { :controller => "schedules", :action => "destroy", :id => @schedule.id, :date => @now_date, :next => 'calendar' }, :confirm => '本当に削除してよろしいですか?', :method => :delete %><br />

<br />
<br />

<%= link_to t( 'menu.top' ), :action => "calendar", :date => @now_date %><br />

</div>

<br />

<%= error_messages_for :schedule %>

<% form_for @schedule, :url => { :controller => "schedules", :action => "create" } do |f| %>
  <p>
    <b>タイトル</b><br />
    <%= f.text_field :title, :class => 'text_field' %>
  </p>

  <p>
    <b>日付</b><br />
    <%= f.date_select :schedule_date, :start_year => 1900, :use_month_numbers => true %>
  </p>

  <p>
    <b>時間</b><br />
    <%= f.time_select :start_time, :minute_step => 5, :include_blank => false %>
    〜
    <%= f.time_select :end_time, :minute_step => 5, :include_blank => false %>
  </p>

  <p>
    <b>周期</b><br />
<% if false %>
    <%= f.text_field :cycle, :value => "1" %>
<% end %>
    1
    <%= f.hidden_field :cycle, { :value => "1" } %>
    day
    <%= f.hidden_field :cycle_mode, { :value => "day" } %>
  </p>

<% if false %>
  <p>
    <b>周期間隔</b><br />
    <%= select( "schedule", "cycle_mode", $cycle_mode, { :selected => "day" } )%><br />
  </p>
<% end %>

  <p>
    <b>公開設定</b><br />
    <%= select( "schedule", "mode", $mode, { :selected => @schedule.mode } )%><br />
  </p>

  <p>
    <b>備考</b><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <%= hidden_field_tag :date, @now_date %>
    <%= f.hidden_field :user_id, { :value => session[:user_id] } %>
    <%= f.submit "作成" %>
  </p>
<% end %>

<div class="pagination menu">
  <%= link_to t( 'menu.list' ), { :controller => "schedules", :action => "list", :date => @now_date, :mode => params[:mode] } %><br />
  
  <br />
  <br />
  
  <%= link_to t( 'menu.top' ), :action => "calendar", :date => @now_date %><br />

  <br />
</div>

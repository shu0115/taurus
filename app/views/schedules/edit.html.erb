<span class="menu_title">編集</span><br />

<br />

<%= error_messages_for :schedule %>

<% unless @schedule.blank? %>
<% form_for @schedule, :url => "/schedules/update/#{@schedule.id}" do |f| %>
  <p>
    <b>タイトル</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>日付</b><br />
    <%= f.date_select :schedule_date, :start_year => 1900, :use_month_numbers => true %>
  </p>

  <p>
    <b>時間</b><br />
    <%= f.time_select :start_time, :include_blank => false %>
    〜
    <%= f.time_select :end_time, :include_blank => false %>
  </p>

  <p>
    <b>周期</b><br />
<% if false %>
    <%= f.text_field :cycle %>
<% end %>
    <%= @schedule.cycle %>
    <%= @schedule.cycle_mode %>
   </p>

<% if false %>
  <p>
    <b>周期間隔</b><br />
    <%= select( "schedule", "cycle_mode", $cycle_mode, { :selected => @schedule.cycle_mode } )%><br />
  </p>
<% end %>

  <p>
    <b>公開設定</b><br />
    <%= select( "schedule", "mode", $mode, { :selected => @schedule.mode } )%><br />
  </p>

  <p>
    <b>備考</b><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <%= hidden_field_tag :date, @now_date %>
    <%= f.submit "保存" %>
  </p>
<% end %>

<%# ページネーション %>
<div class="pagination">

<%= link_to t( 'menu.show' ), { :controller => 'schedules', :action => 'show', :id => @schedule.id, :date => @now_date } %>
<% end %>
<%= link_to t( 'menu.list' ), { :controller => 'schedules', :action => 'list', :date => @now_date, :mode => params[:mode] } %><br />

<br />
<br />

<%= link_to t( 'menu.top' ), :action => 'calendar', :date => @now_date %><br />

</div>


<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.login", :default => "Login")}", :action => "login" %></li>
    </ul>
  </div>

  <div class="content">

    <h2 class="title">ログイン</h2>

    <div class="inner">

      <%# ログイン情報入力 %>
      <% form_for :user, :url => { :controller => "entry", :action => "login" }, :html => { :class => :form } do |f| -%>
        <%= Utility.replace_message( :message => f.error_messages )   %>

        <div class="group">
          <%= f.label :login_id, t("activerecord.attributes.user.login_id", :default => "Login ID"), :class => :label %>
          <%= f.text_field :login_id, :class => 'text_field' %>
          <span class="description">Ex: a simple text</span>
        </div>

        <div class="group">
          <%= f.label :password, t("activerecord.attributes.user.password", :default => "Password"), :class => :label %>
          <%= f.password_field :password, :class => 'password_field' %>
          <span class="description">Ex: a simple text</span>
        </div>

        <div class="group navform wat-cf">
          <%# 確認 %>
          <button class="button" type="submit"><%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.login", :default => "Login")}") %> <%= t("web-app-theme.login", :default => "Login") %></button>
        </div>
      <% end -%>

    </div>
  </div>
</div>


<%= error_messages_for :schedule %>

<% form_for @schedule, :url => "/schedules/create" do |f| %>
  <p>
    <b>タイトル</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>日付</b><br />
    <%= f.date_select :schedule_date, :start_year => 1900, :use_month_numbers => true %>
  </p>

  <p>
    <b>時間</b><br />
    <%= f.time_select :start_time, :include_blank => false %>
    〜
    <%= f.time_select :end_time, :include_blank => false %>
  </p>

  <p>
    <b>周期</b><br />
    <%= f.text_field :cycle, :value => "1" %>
  </p>

  <p>
    <b>周期間隔</b><br />
    <%= select( "schedule", "cycle_mode", $cycle_mode, { :selected => "day" } )%><br />
  </p>

  <p>
    <b>公開設定</b><br />
    <%= select( "schedule", "mode", $mode, { :selected => @schedule.mode } )%><br />
  </p>

  <p>
    <b>備考</b><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <%= hidden_field_tag :date, @now_date %>
    <%= f.submit "作成" %>
  </p>
<% end %>

<%= link_to '一覧', { :controller => "schedules", :action => "list", :id => @schedule.id, :date => @now_date } %><br />
<br />
<%= link_to 'カレンダー', :action => "calendar", :date => @now_date %><br />

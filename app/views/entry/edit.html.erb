<div class="block">

  <div class="content">

    <!--<h3 class="title">登録情報変更</h3>-->

    <br />

    <div class="inner">

      <%# ユーザ情報入力 %>
      <% form_for :user, :url => { :controller => "entry", :action => "update" }, :html => { :class => :form } do |f| -%>
        <%= Utility.replace_message( :message => f.error_messages )   %>

        <table>
          <%# ログインID %>
          <tr class="group">
            <th align="left"><%= f.label :login_id, "*" + t("activerecord.attributes.user.login_id"), :class => :label -%></th>
            <td><%= f.text_field :login_id, :class => 'text_field' -%></td>
          </tr>

          <%# パスワード %>
          <tr class="group">
            <th align="left"><%= f.label :password, "*" + t("entry.password"), :class => :label %></th>
            <td><%= f.password_field :password, :class => 'password_field' %></td>
          </tr>

          <%# 表示名 %>
          <tr class="group">
            <th align="left"><%= f.label :display_name, t("activerecord.attributes.user.display_name"), :class => :label %></th>
            <td><%= f.text_field :display_name, :class => 'text_field' %></td>
          </tr>

          <%# TwitterID %>
          <tr class="group">
            <th align="left"><%= f.label :twitter_id, t("activerecord.attributes.user.twitter_id"), :class => :label %></th>
            <td><%= f.text_field :twitter_id, :class => 'text_field' %></td>
          </tr>

          <%# 変更パスワード %>
          <tr class="group">
            <th align="left"><%= f.label :edit_password, t("entry.edit_password"), :class => :label %></th>
            <td><%= f.password_field :edit_password, :class => 'password_field' %></td>
          </tr>

          <%# 変更パスワード確認 %>
          <tr class="group">
            <th align="left"><%= f.label :edit_password_confirmation, t("entry.edit_password_confirmation"), :class => :label %></th>
            <td><%= f.password_field :edit_password_confirmation, :class => 'password_field' %></td>
          </tr>
          
          <%# 確認ボタン %>
          <tr class="group">
            <th align="left"><button class="button" type="submit"><%= t("entry.edit", :default => "Edit") %></button></th>
            <td><br /></td>
          </tr>
        </table>

          <br /><br />

          <%# トップ %>
          <div class="pagination menu">
            <%= link_to t( "menu.top" ), { :controller => 'schedules' }, :class => 'button' %>
          </div>
        </div>
      <% end -%>

      <br />
      <br />

    </div>
  </div>
</div>
